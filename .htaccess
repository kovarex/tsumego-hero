# Disable HTTP/2 and HTTP/3 by clearing ALPN advertisement
<IfModule mod_headers.c>
    Header always unset Alt-Svc
    Header always set Alt-Svc "clear"
    Header always set Connection "close"
</IfModule>

<IfModule mod_rewrite.c>
    RewriteEngine on

    # Allow phpBB forums to run outside /webroot
    RewriteRule ^forums(/.*)?$ - [L]

    RewriteRule ^$ webroot/ [L]
    RewriteRule (.*) webroot/$1 [L]
</IfModule>
